{
  "name": "approvio",
  "version": "0.0.1",
  "author": "Giovanni Baratta",
  "license": "MIT",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "start": "dotenv -e .env.local -- nest start",
    "start:dev": "dotenv -e .env.local -- nest start --watch --debug",
    "deps:start": "./scripts/dependencies.sh start",
    "deps:start:test": "./scripts/dependencies.sh start test",
    "deps:stop": "./scripts/dependencies.sh stop",
    "deps:down": "./scripts/dependencies.sh down",
    "deps:rebuild": "./scripts/dependencies.sh rebuild",
    "db:update-schema": "yarn deps:start db && yarn prisma:pull && yarn prisma:generate",
    "db:migrate": "yarn deps:start && yarn liquibase:update:dev",
    "liquibase:update:dev": "docker run --network host --rm -v ./db-migrations:/liquibase/changelog liquibase/liquibase:4.31.1 --defaultsFile=/liquibase/changelog/liquibase.docker.properties update",
    "liquibase:update:test": "docker run --network host --rm -v ./db-migrations:/liquibase/changelog liquibase/liquibase:4.31.1 --defaultsFile=/liquibase/changelog/integration-test.liquibase.docker.properties update",
    "lint": "yarn eslint --cache --fix .",
    "format:prettier": "yarn prettier --config .prettierrc . --write",
    "prisma:pull": "yarn prisma db pull && prisma-case-format --file prisma/schema.prisma -p --table-case pascal,singular --field-case camel",
    "prisma:generate": "yarn prisma generate",
    "build": "nest build",
    "generate-api": "openapi-generator-cli generate -i openapi.yaml -g typescript-nestjs -o generated/openapi/ -c openapi-generator-config.yaml",
    "test:setup": "yarn deps:start:test && yarn prisma:generate && yarn liquibase:update:test",
    "test": "yarn test:setup && yarn dotenv -e .env.test -- yarn jest app/**/*.test.ts",
    "test:single": "yarn test:setup && yarn dotenv -e .env.test -- yarn jest "
  },
  "packageManager": "yarn@4.7.0",
  "dependencies": {
    "@nestjs/common": "11.0.11",
    "@nestjs/core": "11.0.11",
    "@nestjs/platform-express": "11.0.11",
    "@prisma/client": "6.5.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "express": "4.21.2",
    "fp-ts": "2.16.9",
    "reflect-metadata": "0.2.2"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.5",
    "@nestjs/schematics": "11.0.1",
    "@nestjs/testing": "11.0.11",
    "@openapitools/openapi-generator-cli": "2.17.0",
    "@types/express": "5.0.0",
    "@types/jest": "29.5.14",
    "@types/node": "22.13.8",
    "@types/supertest": "6.0.2",
    "@typescript-eslint/eslint-plugin": "8.25.0",
    "@typescript-eslint/parser": "8.25.0",
    "dotenv-cli": "8.0.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.2.3",
    "jest": "29.7.0",
    "prettier": "3.5.2",
    "prisma": "6.5.0",
    "prisma-case-format": "2.2.1",
    "rxjs": "7.8.2",
    "supertest": "7.1.0",
    "ts-jest": "29.2.6",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  }
}
