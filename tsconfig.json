{
  "extends": "./tsconfig-google.json",
  "compilerOptions": {
    "outDir": "./build",
    "baseUrl": "./",
    "types": ["jest", "node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@app": ["app/main/src"],
      "@app/*": ["app/main/src/*"],
      "@services": ["app/services/src"],
      "@services/*": ["app/services/src/*"],
      "@domain": ["app/domain/src"],
      "@domain/*": ["app/domain/src/*"],
      "@external": ["app/external/src"],
      "@external/*": ["app/external/src/*"],
      "@controllers": ["app/controllers/src"],
      "@controllers/*": ["app/controllers/src/*"],
      "@utils": ["app/utils/src"],
      "@utils/*": ["app/utils/src/*"]
    }
  },
  "exclude": ["node_modules", "build"]
}
